{
	WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;		// stop watchdog timer

	//dutyVar = 20;
pwminit();
Port1_init();

NVIC->ISER[1] = 1 << ((PORT1_IRQn)&31);
__enable_interrupt();


